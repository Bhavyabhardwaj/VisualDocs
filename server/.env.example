# Server Configuration
NODE_ENV=development
PORT=3004
HOST=localhost

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/visualdocs_db"

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
REFRESH_TOKEN_SECRET=your-super-secure-refresh-token-secret-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# CORS Configuration  
CLIENT_URL=http://localhost:3005
ALLOWED_ORIGINS=http://localhost:3005,http://localhost:3000

# AI Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
MAX_FILES_PER_PROJECT=100

# Logging
LOG_LEVEL=info